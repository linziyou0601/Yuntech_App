<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scoreCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="2dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/bus_relLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bus_card"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bus_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高鐵快捷公車 201"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="clip_horizontal|center|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bus_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="雲科大"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    app:srcCompat="@drawable/ic_arrow_forward" />

                <TextView
                    android:id="@+id/bus_dest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="高鐵車站"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_score1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bus_originSpot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="校門口"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="發車時間 "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bus_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="08:00"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/md_btn_selected_dark" />

            <TextView
                android:id="@+id/bus_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="連續放假前一日行駛；寒暑假及假日停駛"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>